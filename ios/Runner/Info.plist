<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Identificación básica de la app -->
  <key>CFBundleName</key>
  <string>petcare</string>
  <key>CFBundleDisplayName</key>
  <string>Petcare</string>
  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
  <key>CFBundleShortVersionString</key>
  <string>$(FLUTTER_BUILD_NAME)</string>
  <key>CFBundleVersion</key>
  <string>$(FLUTTER_BUILD_NUMBER)</string>

  <!-- Configuración de interfaz -->
  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>
  <key>UIMainStoryboardFile</key>
  <string>Main</string>
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>
  <key>UISupportedInterfaceOrientations~ipad</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <!-- Clave de Google Maps (google_maps_flutter) -->
  <key>GMSApiKey</key>
  <string>AIzaSyBMW_wE-Fen434FQEUz-JiiLGzVqtLGJV8</string>

  <!-- Permisos de uso (Usage Descriptions) -->

  <!-- Para geolocator: acceso a ubicación en primer plano -->
  <key>NSLocationWhenInUseUsageDescription</key>
  <string>Necesitamos acceder a tu ubicación para mostrar datos cercanos.</string>

  <!-- Para image_picker / ML Kit (cámara en tiempo real) -->
  <key>NSCameraUsageDescription</key>
  <string>Necesitamos acceder a la cámara para tomar fotos o escanear información.</string>

  <!-- Para image_picker / ML Kit (si usas imágenes de la galería) -->
  <key>NSPhotoLibraryUsageDescription</key>
  <string>Necesitamos acceder a tu galería para seleccionar imágenes.</string>

  <!-- Si grabas video con audio (opcional) -->
  <key>NSMicrophoneUsageDescription</key>
  <string>Necesitamos acceder al micrófono para grabar audio en los videos.</string>

  <!-- Face ID (ya lo tienes) -->
  <key>NSFaceIDUsageDescription</key>
  <string>Autentificación con Face ID</string>

  <!-- Para conexiones HTTP no seguras (opcional si requieres acceso a URLs sin HTTPS) -->
  <key>NSAppTransportSecurity</key>
  <dict>
    <key>NSAllowsArbitraryLoads</key>
    <true/>
  </dict>

</dict>
</plist>
